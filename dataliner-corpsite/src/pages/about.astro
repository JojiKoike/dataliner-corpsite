---
import BaseLayout from '../layouts/BaseLayout.astro';
import { newtClient } from '../lib/newt';
import type { Article } from '../lib/newt';

const response = await newtClient.getContent<Article>({
  appUid: 'document-site',
  modelUid: 'article',
  contentId: '61e93243616290001858fe14',
  query: {
    select: ['title', 'body'],
  },
});
---

<BaseLayout title="DataLiner" description="事業概要">
  <div>
    <!-- コンテンツ開始 -->
    <section class="py-8">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <h2>{response.title}</h2>
        <div>
          <article set:html={response.body} />
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
